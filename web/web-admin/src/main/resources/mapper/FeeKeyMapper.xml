<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.admin.mapper.FeeKeyMapper">


    <resultMap id="feeInfoMap" type="com.atguigu.lease.web.admin.vo.fee.FeeKeyVo">
        <id property="id" column="key_id"/>
        <result property="name" column="key_name"/>
        <collection property="feeValueList" ofType="com.atguigu.lease.model.entity.FeeValue" autoMapping="true">
            <id property="id" column="value_id"/>
            <result property="name" column="value_name"/>
        </collection>
    </resultMap>

    <select id="feeInfoList" resultMap="feeInfoMap">
        select k.id   key_id,
               k.name key_name,
               v.id   value_id,
               v.name value_name,
               v.unit,
               v.fee_key_id
        from (select id,
                     name
              from fee_key
              where is_deleted = 0) k
                 left join
             (select id,
                     name,
                     unit,
                     fee_key_id
              from fee_value
              where is_deleted = 0) v
             on k.id = v.fee_key_id;
    </select>
</mapper>
